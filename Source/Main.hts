require('utils');
require('meteorsmanager');
require('planet');

let planet;

love.load = function()
{
    planet = Planet.New();
};

//

love.update = function(dt)
{
    Planet.Update(planet, dt);
    MeteorsManager.Update(dt);
    MeteorsManager.Resolve_Planet_Collisions(planet);
};

//

love.draw = function()
{
    love.graphics.translate(1280 / 2, 720 / 2);
    Planet.Draw(planet);
    MeteorsManager.Draw();
};
